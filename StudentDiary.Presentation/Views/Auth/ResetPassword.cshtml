@model StudentDiary.Services.DTOs.ResetPasswordDto

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-lock"></i> Reset Your Password
                </h4>
            </div>
            <div class="card-body">
                <p class="text-muted mb-4">
                    Please enter your new password below. Make sure it's strong and secure.
                </p>
                
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                <form asp-action="ResetPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <!-- Hidden token field -->
                    <input asp-for="Token" type="hidden" />
                    
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label">New Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="NewPassword" class="form-control" placeholder="Enter your new password" autofocus />
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Password must be at least 6 characters long.
                        </small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your new password" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-key"></i> Reset Password
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <div class="alert alert-warning mb-3" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Security Notice:</strong> This reset link will expire after use or after 1 hour.
                </div>
                <p class="mb-0">
                    Remember your password? 
                    <a asp-action="Login" class="text-decoration-none">
                        <i class="fas fa-sign-in-alt"></i> Sign In
                    </a>
                </p>
            </div>
        </div>
        
        <div class="mt-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-shield-alt"></i> Password Security Tips
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li><i class="fas fa-check text-success"></i> Use at least 8 characters</li>
                        <li><i class="fas fa-check text-success"></i> Include uppercase and lowercase letters</li>
                        <li><i class="fas fa-check text-success"></i> Include numbers and special characters</li>
                        <li><i class="fas fa-check text-success"></i> Don't reuse old passwords</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add password strength indicator
        document.addEventListener('DOMContentLoaded', function() {
            const newPasswordInput = document.getElementById('NewPassword');
            const confirmPasswordInput = document.getElementById('ConfirmPassword');
            
            if (newPasswordInput && confirmPasswordInput) {
                confirmPasswordInput.addEventListener('input', function() {
                    if (this.value && this.value !== newPasswordInput.value) {
                        this.classList.add('is-invalid');
                        this.classList.remove('is-valid');
                    } else if (this.value && this.value === newPasswordInput.value) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    } else {
                        this.classList.remove('is-invalid', 'is-valid');
                    }
                });
            }
        });
    </script>
}
