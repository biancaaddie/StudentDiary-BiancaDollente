@model IEnumerable<StudentDiary.Services.DTOs.DiaryEntryDto>

@{
    ViewData["Title"] = "My Diary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-0">
            <i class="fas fa-book text-primary"></i> My Diary
        </h1>
        <p class="text-muted mb-0">Your personal journal entries</p>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> New Entry
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var entry in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm diary-entry-card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0 text-truncate" title="@entry.Title">
                            @entry.Title
                        </h6>
                        <small class="text-muted">
                            @entry.CreatedDate.ToString("MMM dd")
                        </small>
                    </div>
                    <div class="card-body">
                        <div class="entry-content mb-3">
                            @{
                                var contentPreview = entry.Content.Length > 150 ? 
                                    Html.Raw(entry.Content.Substring(0, 150) + "...") : 
                                    Html.Raw(entry.Content);
                            }
                            @contentPreview
                        </div>
                        <div class="entry-meta">
                            <small class="text-muted">
                                <i class="fas fa-clock"></i> 
                                Created: @entry.CreatedDate.ToString("MMM dd, yyyy h:mm tt")
                            </small>
                            @if (entry.LastModifiedDate != entry.CreatedDate)
                            {
                                <br />
                                <small class="text-muted">
                                    <i class="fas fa-edit"></i> 
                                    Updated: @entry.LastModifiedDate.ToString("MMM dd, yyyy h:mm tt")
                                </small>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@entry.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <div class="mt-4 text-center">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="card-title text-primary">
                    <i class="fas fa-chart-bar"></i> Your Writing Journey
                </h5>
                <div class="row">
                    <div class="col-md-4">
                        <div class="stat-item">
                            <h3 class="text-success">@Model.Count()</h3>
                            <p class="text-muted mb-0">Total Entries</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-item">
                            <h3 class="text-info">@Model.Sum(e => e.Content.Split(' ').Length)</h3>
                            <p class="text-muted mb-0">Total Words</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-item">
                            <h3 class="text-warning">
                                @if (Model.Any())
                                {
                                    @((DateTime.UtcNow - Model.OrderBy(e => e.CreatedDate).First().CreatedDate).Days)
                                }
                                else
                                {
                                    <text>0</text>
                                }
                            </h3>
                            <p class="text-muted mb-0">Days Writing</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="fas fa-book-open text-muted" style="font-size: 4rem;"></i>
        </div>
        <h3 class="text-muted mb-3">No Diary Entries Yet</h3>
        <p class="text-muted mb-4">
            Start your personal journal journey by writing your first entry. 
            Share your thoughts, experiences, and memories in a safe, private space.
        </p>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-pen"></i> Write Your First Entry
        </a>
    </div>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-lock fa-2x text-primary mb-3"></i>
                    <h5>Private & Secure</h5>
                    <p class="text-muted">Your diary entries are completely private and secure.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-edit fa-2x text-success mb-3"></i>
                    <h5>Rich Text Editor</h5>
                    <p class="text-muted">Format your entries with our easy-to-use rich text editor.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-search fa-2x text-info mb-3"></i>
                    <h5>Easy to Find</h5>
                    <p class="text-muted">Quickly find and revisit your past entries anytime.</p>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .diary-entry-card {
        transition: transform 0.2s ease-in-out;
        border-radius: 15px;
    }
    
    .diary-entry-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .entry-content {
        font-size: 0.95rem;
        line-height: 1.5;
        max-height: 100px;
        overflow: hidden;
    }
    
    .entry-meta {
        border-top: 1px solid #f8f9fa;
        padding-top: 0.5rem;
    }
    
    .stat-item {
        padding: 1rem;
    }
    
    .stat-item h3 {
        margin-bottom: 0.5rem;
        font-weight: bold;
    }
    
    .card {
        border-radius: 15px;
    }
    
    .btn {
        border-radius: 25px;
    }
    
    .btn-group .btn {
        border-radius: 0;
    }
    
    .btn-group .btn:first-child {
        border-top-left-radius: 25px;
        border-bottom-left-radius: 25px;
    }
    
    .btn-group .btn:last-child {
        border-top-right-radius: 25px;
        border-bottom-right-radius: 25px;
    }
</style>
