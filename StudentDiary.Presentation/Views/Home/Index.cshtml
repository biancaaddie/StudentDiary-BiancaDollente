@{
    ViewData["Title"] = "Welcome to Student Diary";
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5 mb-5 rounded">
    <div class="container text-center">
        <div class="row align-items-center">
            <div class="col-md-8 mx-auto">
                <i class="fas fa-book fa-4x mb-4 opacity-75"></i>
                <h1 class="display-3 fw-bold mb-4">Student Diary</h1>
                <p class="lead mb-4">
                    Your personal digital journal where thoughts, experiences, and memories come to life.
                    Start your writing journey today in a safe, private, and beautifully designed space.
                </p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-light btn-lg me-md-2">
                        <i class="fas fa-user-plus"></i> Get Started Free
                    </a>
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-sign-in-alt"></i> Sign In
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="display-5 mb-3">Why Choose Student Diary?</h2>
            <p class="lead text-muted">Everything you need for meaningful journaling</p>
        </div>
    </div>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="fas fa-lock fa-2x"></i>
                    </div>
                    <h4 class="card-title">Private & Secure</h4>
                    <p class="card-text text-muted">
                        Your thoughts are completely private. Only you can access your diary entries 
                        with secure authentication and data protection.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-success text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="fas fa-edit fa-2x"></i>
                    </div>
                    <h4 class="card-title">Rich Text Editor</h4>
                    <p class="card-text text-muted">
                        Express yourself with a powerful rich text editor. Format your entries 
                        with bold, italic, lists, links, and more.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-info text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                        <i class="fas fa-user-circle fa-2x"></i>
                    </div>
                    <h4 class="card-title">Personal Profile</h4>
                    <p class="card-text text-muted">
                        Customize your profile with a personal photo and track your writing journey 
                        with detailed statistics and insights.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Benefits Section -->
<div class="bg-light py-5 mb-5 rounded">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h3 class="display-6 mb-4">Start Your Journey Today</h3>
                <div class="benefits-list">
                    <div class="benefit-item d-flex align-items-center mb-3">
                        <div class="benefit-icon bg-primary text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                            <i class="fas fa-check"></i>
                        </div>
                        <div>
                            <strong>Reflect & Grow:</strong> Regular journaling helps process emotions and experiences
                        </div>
                    </div>
                    <div class="benefit-item d-flex align-items-center mb-3">
                        <div class="benefit-icon bg-success text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                            <i class="fas fa-check"></i>
                        </div>
                        <div>
                            <strong>Preserve Memories:</strong> Keep track of important moments and milestones
                        </div>
                    </div>
                    <div class="benefit-item d-flex align-items-center mb-3">
                        <div class="benefit-icon bg-info text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                            <i class="fas fa-check"></i>
                        </div>
                        <div>
                            <strong>Improve Writing:</strong> Practice and develop your writing skills daily
                        </div>
                    </div>
                    <div class="benefit-item d-flex align-items-center">
                        <div class="benefit-icon bg-warning text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                            <i class="fas fa-check"></i>
                        </div>
                        <div>
                            <strong>Stress Relief:</strong> Writing can be therapeutic and help manage stress
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 text-center">
                <div class="stats-container">
                    <div class="stat-item mb-4">
                        <div class="stat-number display-4 text-primary fw-bold">100%</div>
                        <div class="stat-label text-muted">Free to Use</div>
                    </div>
                    <div class="stat-item mb-4">
                        <div class="stat-number display-4 text-success fw-bold">âˆž</div>
                        <div class="stat-label text-muted">Unlimited Entries</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number display-4 text-info fw-bold">24/7</div>
                        <div class="stat-label text-muted">Always Available</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="cta-section text-center py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <h3 class="display-6 mb-3">Ready to Begin?</h3>
                <p class="lead text-muted mb-4">
                    Join Student Diary today and start capturing your thoughts, experiences, and growth. 
                    It's completely free and takes less than a minute to get started.
                </p>
                <a asp-controller="Auth" asp-action="Register" class="btn btn-primary btn-lg">
                    <i class="fas fa-rocket"></i> Create Your Diary Now
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #0d6efd 0%, #0540a3 100%);
        border-radius: 20px !important;
    }
    
    .feature-card {
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.1) !important;
    }
    
    .feature-icon, .benefit-icon {
        transition: transform 0.3s ease;
    }
    
    .feature-card:hover .feature-icon {
        transform: scale(1.1);
    }
    
    .btn {
        border-radius: 25px;
        padding: 0.75rem 2rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    
    .stat-number {
        line-height: 1;
    }
    
    .benefit-item {
        transition: transform 0.2s ease;
    }
    
    .benefit-item:hover {
        transform: translateX(5px);
    }
</style>
